<rules xmlns="http://www.xebialabs.com/xl-deploy/xl-rules">

    <rule name="flyway.DeployedScripts.create" scope="deployed">
        <conditions>
            <type>flyway.DeployedScripts</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <jython>
                <description expression="true">"Run migration " + deployed.name</description>
                <order>50</order>
                <script-path>flyway/run-migration.py</script-path>
                <jython-context>
                    <deployed expression="true">deployed</deployed>
                </jython-context>
            </jython>
        </steps>
    </rule>

</rules>